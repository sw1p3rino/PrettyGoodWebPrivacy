{
    "manifest_version": 3,
    "name": "PrettyGoodWebPrivacy",
    "version": "1.0",
    "description": "Automatically decrypts pgp messages if the private key fits. Written by swiper, inspired by flowcrypt. Checkout my blog https://swiper.at",
    "permissions": ["storage","scripting"],
    "background": {
      "service_worker": "content.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["openpgp.min.js", "decryptor.js", "content.js"],
        "run_at": "document_idle"
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon":{
      "1":"encryption.png"
    }
    }
}  